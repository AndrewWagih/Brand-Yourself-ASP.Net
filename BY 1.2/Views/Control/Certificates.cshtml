
@{
    ViewBag.Title = "Certificates";
    Layout = "~/Views/Shared/_LayoutUserPanal.cshtml";
}

    <div class="row">
        <div class="col-12">
            <p class="main-header-form"><i class="fas fa-award"></i> Certificates  </p>

            <div class="container container-form BP" v-for="cert in certData" :key="cert.id">
                <div class="row">
                    <div class="form-group col-12" style="margin-top:20px">
                        <label class="main-lable" for="">Title</label>
                        <input class="main-input" type="text" placeholder="Title" v-model="cert.title">
                    </div>
                    <div class="form-group col-6" style="padding: 19px;">
                        <label class="main-lable" for="">Date From</label>
                        <input type="date" class="main-input" style="width:100%;" lang="en" v-model="cert.date_from">
                    </div>
                    <div class="form-group col-6" style="padding: 19px;">
                        <label class="main-lable" for="">Date To</label>
                        <input type="date" class="main-input" style="width:100%;" lang="en" v-model="cert.date_to">
                    </div>
                    <button class="mian-button bg-primary" style="width:50%;margin:0 auto" v-on:click="updateCert(cert)">Edit</button>
                    <button class="mian-button bg-danger" style="width:50%;margin:0 auto" v-on:click=" deleteCert(cert)">Delete</button>
                    <i class="fas fa-times-circle text-danger delete-icon"></i>
                    <i class="fas fa-plus-circle bg-primaey new-icon"></i>
                </div>
            </div>
            <!-- Add New-->

            <div class="container container-form BP">
                <div class="row">
                    <div class="form-group col-12" style="margin-top:20px">
                        <label class="main-lable" for="">Title</label>
                        <input class="main-input" type="text" placeholder="Title" v-model="addCert.title">
                    </div>
                    <div class="form-group col-6" style="padding: 19px;">
                        <label class="main-lable" for="">Date From</label>
                        <input type="date" class="main-input" style="width:100%;" lang="en" v-model="addCert.date_form">
                    </div>
                    <div class="form-group col-6" style="padding: 19px;">
                        <label class="main-lable" for="">Date To</label>
                        <input type="date" class="main-input" style="width:100%;" lang="en" v-model="addCert.date_to">
                    </div>
                    <button class="mian-button" v-on:click="AddNewCert">Add</button>
                </div>
            </div>
        </div>
    </div>