
@{
    ViewBag.Title = "Language";
    Layout = "~/Views/Shared/_LayoutUserPanal.cshtml";
}

    <div class="row">
        <div class="col-12">
            <p class="main-header-form"><i class="fas fa-language"></i> Languages</p>
            <div class="container container-form">
                <div class="row BP postion-rel" v-for="lang in langData" :key="lang.id">
                    <div class="form-group col-6">
                        <label class="main-lable" for="">Language</label>
                        <input class="main-input" type="text" placeholder="Language" v-model="lang.language_name">
                    </div>
                    <div class="form-group col-6">
                        <label class="main-lable" for="">Mastery</label>
                        <input class="main-input" type="text" placeholder="Mastery" v-model="lang.mastery">
                    </div>
                    <button class="mian-button bg-primary" style="width:50%;margin:0 auto" v-on:click="updateLang(lang)">Edit</button>
                    <button class="mian-button bg-danger" style="width:50%;margin:0 auto" v-on:click="deleteLang(lang)">Delete</button>
                    <i class="fas fa-times-circle text-danger delete-icon"></i>
                    <i class="fas fa-plus-circle bg-primaey new-icon"></i>
                </div>

                <div class="row">
                    <div class="form-group col-6">
                        <label class="main-lable" for="">Language</label>
                        <input class="main-input" type="text" placeholder="Language" v-model="addLang.language_name">
                    </div>
                    <div class="form-group col-6">
                        <label class="main-lable" for="">Mastery</label>
                        <input class="main-input" type="text" placeholder="Mastery" v-model="addLang.mastery">
                    </div>
                    <button class="mian-button" v-on:click="AddNewLang">Add</button>
                </div>
            </div>
        </div>
    </div>
