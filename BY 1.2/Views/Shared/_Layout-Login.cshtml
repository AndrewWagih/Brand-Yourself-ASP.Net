<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="@Url.Content("~/css/manage.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/home.css")">
    <style scoped>
        a, a {
            color: #a5a5a5;
            text-decoration: none
        }

            a:hover, a:hover {
                color: #a5a5a5;
                text-decoration: none
            }
    </style>
</head>
<body style="padding-top:0px;">

    <div class="row" id="app">
        

        <div class="col-lg-12" margin="0 auto">
            <div class="container-fluid">

                <div class="row" style="padding: 0px;margin: 0px;margin-bottom: 14px;">
                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        <span class="logo-nav"><span class="b" style="color:#27293D">B</span><span class="y" style="color:#40B47F">Y</span></span>
                    </div>
                    <ul class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-xs-12">
                        <li><a href="/" style="color:#27293D">Home</a></li>
                        <li><a to="/templates" style="color:#27293D">Manage Template</a> </li>

                        @{
                            if (Request.Cookies != null)
                            {
                                <li><a style="color:#27293D" href="/Login/LogOut">LogOut</a></li>
                            }


                        }

                        @{
                            if (Request.Cookies == null)
                            {
                                <li><a href="/Login/Loginn" style="color:#27293D">Log In</a> </li>
                                <li><a href="/Login/sinUp" style="color:#27293D">Sign Up</a></li>
                            }
                        }
                        <li><a href="/Login/Loginn" style="color:#27293D">Log In</a> </li>
                        <li><a href="/Login/sinUp" style="color:#27293D">Sign Up</a></li>
                    </ul>
                </div>
                <!-- Contetns Forms -->
                <div style="width:40%;margin:0 auto">
                    @RenderBody()
                </div>
                
                <!-- End Contetns Forms -->
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    


</body>
</html>